APP_NAME=KidTube
APP_VERSION=0.1.0
HOST=0.0.0.0
PORT=2018
DATABASE_URL=sqlite:////data/kidtube.db
LOG_LEVEL=INFO
DISCORD_PUBLIC_KEY=
YOUTUBE_API_KEY=
SYNC_INTERVAL_SECONDS=900
SYNC_MAX_VIDEOS_PER_CHANNEL=50
# Set to true to fetch videos beyond the latest 50 per channel (uses more YouTube API quota)
DEEP_SYNC_ENABLED=false
HTTP_TIMEOUT_SECONDS=10

# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-random-string

# Discord webhook for approval notifications (optional)
# Channel Settings → Integrations → Webhooks → New Webhook → Copy URL
DISCORD_APPROVAL_WEBHOOK_URL=

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your@gmail.com
SMTP_PASSWORD=xxxx xxxx xxxx xxxx
SMTP_FROM=your@gmail.com
APPROVAL_EMAIL_TO=parent@email.com
# Email notifications for approval requests
# Use a Gmail App Password (not your real password)
# Generate at: myaccount.google.com/apppasswords
